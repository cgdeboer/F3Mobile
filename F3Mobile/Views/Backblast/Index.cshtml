@model IEnumerable<F3.ViewModels.Post>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var id = 1;
}
<div id="drive" class="pull-right" style="margin-top:15px;">
    <button id="drive-sched" class="btn btn-default btn-small" onclick="location.href = 'http://f3nation.com/locations/charlotte-south-nc/'">View all @@ F3Nation.com</button>
</div>
<h2>Backblasts</h2>

<div class="panel-group" id="accordion" role="tablist" aria-multiselectable="true">
    @foreach (var item in Model)
    {
        <div class="panel panel-default">
            <div class="panel-heading" role="tab" id="heading@(id)">
                <h4 class="panel-title">
                    <a data-toggle="collapse" data-parent="#accordion" href="#collapse@(id)" aria-expanded="true" aria-controls="collapse@(id)">@item.Title</a>
                </h4>
                
                <p class="text-muted">@item.Date @item.Author</p>
            </div>
            <div id="collapse@(id)" class="panel-collapse collapse" role="tabpanel" aria-labelledby="heading@(id)">
                <div class="panel-body">
                    <p><a href="@item.Url" target="_blank">Read @@ F3Nation.com</a></p>
                    @Html.Raw(@item.Content)
                </div>
            </div>
        </div>
        id++;
    }
</div>
