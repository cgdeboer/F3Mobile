@using F3Mobile.Code
@{
    ViewBag.Title = "Schedule";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Q Schedule - Beta</h2>
<div id="authorize-div" style="display: none">
    <span>Authorize access to calendar</span>
    <!--Button for the user to click to initiate auth sequence -->
    <button id="authorize-button" ng-click="handleAuthClick()">
        Authorize
    </button>
</div>
<div id="logout-div" style="display: none">
    <span>Logout of application</span>
    <!--Button for the user to click to initiate auth sequence -->
    <button id="logout-button" ng-click="handleLogoutClick()">
        Logout
    </button>
</div>
<div id="itemHolder">
</div>

@section scripts
{

    <script>
        var CLIENT_ID = '@WebConfig.ClientId';
    </script>
    @Scripts.Render("~/scripts/calendar.js");
    <script src="https://apis.google.com/js/client.js?onload=checkAuth"></script>
}
