@using F3Mobile.Code
@{
    ViewBag.Title = "Schedule";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Q Schedule - Beta</h2>
<div id="authorize-div" class="pull-right" style="display: none">
    <!--Button for the user to click to initiate auth sequence -->
    <button id="authorize-button" ng-click="handleAuthClick()">
        Authorize
    </button>
</div>
<div id="logout-div" class="pull-right" style="display: none">
    <!--Button for the user to click to initiate auth sequence -->
    <button id="logout-button" ng-click="handleLogoutClick()">
        Logout
    </button>
</div>
<div role="tabpanel">

    <!-- Nav tabs -->
    <ul class="nav nav-tabs" role="tablist">
        <li role="presentation" class="active"><a href="#current" aria-controls="current" role="tab" data-toggle="tab">This Week</a></li>
        <li role="presentation"><a href="#all" aria-controls="all" role="tab" data-toggle="tab">All</a></li>
        <li role="presentation"><a href="#firstF" aria-controls="firstF" role="tab" data-toggle="tab">1st F Info</a></li>
    </ul>

    <!-- Tab panes -->
    <div class="tab-content">
        @*<div role="tabpanel" class="tab-pane active" id="loading">
                <div>
                    <p class="center-block text-center" style="margin-top: 30px;">
                        <img src="~/Content/loading-image.gif" />
                    </p>
                </div>

            </div>*@
        <div role="tabpanel" class="tab-pane active" id="current">
            <p></p>
            <div class="center-block" id="loading-current"><img src="~/Content/loading-image.gif" class="center-block" /></div>
            <ul class="list-group" id="currentWeekItems"></ul>
        </div>
        <div role="tabpanel" class="tab-pane" id="all">
            <p></p>
            <form class="form-inline">
                <div class="form-group ">
                    <select id="workout" class="form-control">
                        <option value="All">View All</option>
                        <option value="Ascent">Ascent</option>
                        <option value="Bagpipe">Bagpipe</option>
                        <option value="Centurion">Centurion</option>
                        <option value="Death Valley">Death Valley</option>
                        <option value="Dromedary">Dromedary</option>
                        <option value="Fight Club">Fight Club </option>
                        <option value="Flash">Flash</option>
                        <option value="Mountain Goat">Mountain Goat</option>
                        <option value="Olympus">Olympus</option>
                        <option value="Outland">Outland</option>
                        <option value="Peak 51">Peak 51</option>
                        <option value="Rebel Yell">Rebel Yell</option>
                        <option value="Stonehenge">Stonehenge</option>
                        <option value="The Brave">The Brave</option>
                        <option value="The Foxhole">The Foxhole</option>
                        <option value="The Matrix">The Matrix</option>
                        <option value="The Maul">The Maul</option>
                    </select>
                </div>
            </form>
            <p></p>
            <div id="itemHolder">
                <div class="center-block" id="loading-all"><img src="~/Content/loading-image.gif" class="center-block" /></div>
            </div>
        </div>
        <div role="tabpanel" class="tab-pane" id="firstF">
            <p></p>
            <div><p class='lead'>1st F Info</div>
            <div class="center-block" id="loading-firstf"><img src="~/Content/loading-image.gif" class="center-block" /></div>
            
        </div>
    </div>

</div>


@section scripts
{
    <script src="https://apis.google.com/js/client.js"></script>
    <script>
        $(function () {
            require(['calendar'], function (cal) {
                cal.initialize({
                    client_id: '@WebConfig.ClientId',
                    calSvcUrl: '@Url.Action("Get","Schedule")',
                    calListUrl: '@Url.Action("List", "Schedule")'
                });
            });
        });
    </script>
}
